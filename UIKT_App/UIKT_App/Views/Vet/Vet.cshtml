@{
}
@model VetModel
<h2>Izdajanje mnenja o opravljenjem izobraževanju</h2>
<div>
    <form method="post" posi>
        <div class="form-group">
            <label asp-for="Kandidat"></label>
            <input asp-for="Kandidat" />
            <span asp-validation-for="Kandidat"></span>
        </div>
        <div class="form-group">
            <label asp-for="Mnenje"></label>
            <input asp-for="Mnenje" />
            <span asp-validation-for="Mnenje"></span>
        </div>
        <div class="form-group">
            <label asp-for="JeOpravil"></label>
            <input asp-for="JeOpravil" type="checkbox" value="true"/>
            <span asp-validation-for="JeOpravil">DA</span>
            <input asp-for="JeOpravil" type="checkbox" value="false"/>
            <span asp-validation-for="JeOpravil">NE</span>
        </div>
        <input type="submit" name="poslji" value="Potrdi" class="btn-success" id="poslji" />
    </form>
    @Html.Raw(TempData["msg"])
</div>
