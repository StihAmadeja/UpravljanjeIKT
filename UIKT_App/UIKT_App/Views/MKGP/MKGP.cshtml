@{
}
@model MKGPModel
<h2>Pregledovanje vloge</h2>

<div position="absolute" text-aligment="center">
    <form method="post" posi>
        <div class="form-group">
            <label asp-for="Kandidat"></label>
            <input asp-for="Kandidat" />
            <span asp-validation-for="Kandidat"></span>
        </div>
        <div class="form-group">
            <label asp-for="OdpriVlogo"></label>
            <input asp-for="OdpriVlogo" type="file"/>
            <span asp-validation-for="OdpriVlogo"></span>
        </div>
        <div class="form-group">
            <label asp-for="OdpriMnenje"></label>
            <input asp-for="OdpriMnenje" type="file" />
            <span asp-validation-for="OdpriMnenje"></span>
        </div>
        <div class="form-group">
            <label asp-for="JeOdobrenaVloga"></label>
            <input asp-for="JeOdobrenaVloga" type="checkbox" value="true"/>
            <span asp-validation-for="JeOdobrenaVloga">DA</span>
            <input asp-for="JeOdobrenaVloga" type="checkbox" value="false" />
            <span asp-validation-for="JeOdobrenaVloga">NE</span>
        </div>
        <input type="submit" name="poslji" value="Potrdi" class="btn-success" id="poslji" />
    </form>
    @Html.Raw(TempData["msg"])
</div>
